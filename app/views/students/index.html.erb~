<h1>Listing instructors</h1>

<%= link_to 'New instructor', new_instructor_path %>
 
<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
 
  <% @instructors.each do |instructor| %>
    <tr>
      <td><%= instructor.email %></td>
      <td><%= instructor.name %></td>
      <td><%= link_to 'View', instructor_path(instructor) %></td>
      <td><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
      <td><%= link_to 'Delete', instructor_path(instructor),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
