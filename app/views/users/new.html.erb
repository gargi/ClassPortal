<% provide(:title, 'Sign up') %>
<h1><center>Sign up</center></h1>
<body>
<center>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for User.new do |f| %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <br>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email %>
          </div>
          <br>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
          <br>
          <div class="field">
            <%= f.label :password_confirmation, "Confirm password" %>
            <%= f.password_field :password_confirmation %>
          </div>
          <br>
          <div class="field">
            <%= f.label :user_type, "User Type" %>
            <%= f.select :type, options_for_select([['Admin', 'Admin'], ['Instructor', 'Instructor'], ['Student', 'Student']]) %>
          </div>
          <br>
          <br>
          <%= f.submit "Signup", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</center>
</body>

