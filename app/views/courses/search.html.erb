<h1>Search course</h1>

<%= form_for @course, url: { action: "search_results" } do |f| %>

<% if @course.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@course.errors.count, "error") %> prohibited
        this course from being saved:
      </h2>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  
  <p>
    <%= f.label :course_number %><br>
    <%= f.text_field :course_number %>
  </p>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
     <%= f.label :status %><br>
     <%= f.select :status, options_for_select([['',''],['Active','active'], ['Inactive','inactive']]) %>

  </p>

    <p>
      <%= f.label :user_id %><br>
      <%= f.select :user_id, options_from_collection_for_select(User.where("type = ?","instructor"), :id, :name, 2), :include_blank => true %>
    </p>


  <p>
    <%= f.submit 'Search Course' %>
  </p>
<% end %>

