<h1>Editing course</h1>
 
<%= form_for @course, url: { action: "update" }, method: :patch do |f| %>
 
<% if @course.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@course.errors.count, "error") %> prohibited
        this course from being saved:
      </h2>
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  
  <p>
    <%= f.label :Course Number %><br>
    <%= f.text_field :course_number %>
  </p>
 
  <p>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :Start Date %><br>
    <%= f.email_field :start_date %>
  </p>
 
  <p>
    <%= f.label :End Date %><br>
    <%= f.text_field :end_date %>
  </p>
 
  <p>
    <%= f.label :Instructor %><br>
    <%= f.password_field :instructor %>
  </p>
 
  <p>
     <%= f.label :Status %><br>
     <%= f.select :status, [['active', 'active'],['inactive','inactive']]%>

  </p>

  <p>
    <%= f.submit(:url => {:controller => 'courses', :action => 'show'}) %>
  </p>
<% end %>

