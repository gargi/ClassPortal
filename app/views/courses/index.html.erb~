<h1>Listing courses</h1>

<%= link_to 'New course', controller: 'courses', action: 'new'%> 
<table>
  <tr>
    <th>Course Number</th>
    <th>Title</th>
    <th>Description</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Instructor</th>
    <th>Status</th>
    <th colspan="2"></th>
  </tr>
 
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.email %></td>
      <td><%= course.name %></td>
      <td><%= link_to 'View', course_path(course) %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Delete', course_path(course),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
