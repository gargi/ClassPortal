<h1>Listing admins</h1>

<%= link_to 'New Admin', controller: 'admins', action: 'new'%> 
<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th colspan="4"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'View', admin_path(user) %></td>
      <td><%= link_to 'Edit', edit_admin_path(user) %></td>
      <td><%= link_to 'Delete', admin_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
