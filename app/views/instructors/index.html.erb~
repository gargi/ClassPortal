<h1>Listing instructors</h1>

<%= link_to 'New instructor', controller: 'instructors', action: 'new'%> 
<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th colspan="4"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'View', instructor_path(user) %></td>
      <td><%= link_to 'Edit', edit_instructor_path(user) %></td>
      <td><%= link_to 'Delete', instructor_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'History', {:controller => 'enrollments', :action => 'student_history', :u => user.id} %></td>
    </tr>
  <% end %>
</table>
