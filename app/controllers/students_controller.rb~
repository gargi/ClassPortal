class StudentsController < ApplicationController
  def index
    if current_user[:type].to_s == "student"
	@users = User.where("id = ?",current_user[:id])
    else
    	@users = User.where("type = ?","student")
    end
  end

  def show
    @user = User.find(params[:id])
  end

  def new
    @user = User.new
  end

  def edit
    @user = User.find(params[:id])
  end

  def create
    @user = User.new(user_params)
    @user[:type] = 'student'
    if @user.save
    	redirect_to @user
    else
        render 'new'
    end
  end

  def update
    @user = User.find(params[:id])
    if @user.update(user_params_update)
      redirect_to @user
    else
      render 'edit'
    end
  end

  def destroy
    @enrollments = Enrollment.where("user_id = ?",params[:id])
    if not @enrollments.blank?
    	@enrollments.destroy_all
    @user = User.find(params[:id])
    
    @user.destroy
 
    redirect_to students_path
  end

  private

  def user_params
    params.require(:user).permit(:email,:name,:password,:passwordconfirmation)
  end

  def user_params_update
    params.require(:user).permit(:name,:password,:passwordconfirmation)
  end
end
